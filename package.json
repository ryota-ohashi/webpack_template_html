{
  "name": "project",
  "version": "1.0.0",
  "description": "",
  "main": "webpack.config.js",
  "scripts": {
    "dev": "concurrently \"npm run watch:scss\" \"npm run watch:webpack\" \"npm run server\"",
    "build": "npm run scss && npm run webpack",
    "scss": "sass src/assets/scss:dist/assets/css --style=compressed --no-source-map",
    "watch:scss": "sass src/assets/scss:dist/assets/css -w --no-source-map",
    "server": "browser-sync start --port 8000 -s dist",
    "watch:webpack": "webpack --mode development --watch",
    "webpack": "webpack --mode production"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.26.14",
    "concurrently": "^6.2.0",
    "core-js": "^3.8.2",
    "css-loader": "^5.2.6",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "sass": "^1.35.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2"
  }
}
